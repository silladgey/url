generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id        String   @id @default(cuid())
  slug      String   @unique
  original  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visits    Int      @default(0)
}
